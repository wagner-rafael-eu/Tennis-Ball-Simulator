{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Tennis Ball Simulator",
            "type": "shell",
            "command": "${workspaceFolder}\\build.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build and Run Tennis Ball Simulator",
            "type": "shell",
            "command": "${workspaceFolder}\\build.bat && ${workspaceFolder}\\build\\TennisBallSimulator.exe",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "Remove-Item -Path ${workspaceFolder}\\build -Recurse -Force -ErrorAction SilentlyContinue",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
